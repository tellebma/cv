{
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.astro"
  ],
  "exclude": [
    "src/types/**",
    "src/assets/**",
    "tests/**",
    "node_modules/**",
    "dist/**",
    "public/**"
  ],
  "reporter": [
    "text",
    "lcov",
    "html"
  ],
  "reports-dir": "coverage",
  "temp-directory": ".nyc_output",
  "check-coverage": true,
  "branches": 80,
  "functions": 80,
  "lines": 80,
  "statements": 80
}